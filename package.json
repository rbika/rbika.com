{
  "name": "rbika.com",
  "description": "A Next.js version of rbika.com",
  "author": "Rafael Bika(s) <rbikadev@gmail.com> (https://rbika.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rbika/rbika.com/issues"
  },
  "homepage": "https://github.com/rbika/rbika.com#readme",
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prod": "npm run build && npm run start",
    "lint": "tsc && next lint ./",
    "lint:fix": "tsc && next lint --fix ./",
    "test": "jest",
    "test:html": "jest --coverage --coverageReporters=\"html\"",
    "test:watch": "jest --watch",
    "test:staged": "jest --findRelatedTests --passWithNoTests",
    "generate": "plop",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.2",
    "@fortawesome/free-brands-svg-icons": "^6.1.2",
    "@fortawesome/free-regular-svg-icons": "^6.1.2",
    "@fortawesome/free-solid-svg-icons": "^6.1.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "classnames": "^2.3.1",
    "date-fns": "^2.29.1",
    "framer-motion": "^7.0.1",
    "gray-matter": "^4.0.3",
    "next": "12.2.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rehype-prism-plus": "^1.4.2",
    "rehype-raw": "^6.1.1",
    "rehype-sanitize": "^5.0.1",
    "rehype-stringify": "^9.0.3",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@types/node": "18.6.3",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "autoprefixer": "^10.4.8",
    "eslint": "8.21.0",
    "eslint-config-next": "12.2.3",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "lint-staged": "^13.0.3",
    "plop": "^3.1.2",
    "postcss": "^8.4.14",
    "prettier": "2.7.1",
    "tailwindcss": "^3.1.7",
    "typescript": "4.7.4"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "npm run lint:fix",
      "npm run test:staged"
    ]
  }
}
