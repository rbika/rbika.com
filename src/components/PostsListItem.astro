---
interface Props {
  url: string;
  title: string;
  tags: string[];
  date: string;
}

const { url, title, tags, date } = Astro.props;
---

<a
  href={`/blog/${url}`}
  class="text-primary sm:text-secondary hover:text-primary focus:text-primary flex flex-col justify-between gap-1 pt-4 pb-5 no-underline transition-colors duration-300"
>
  <div class="flex flex-col justify-between sm:flex-row">
    <span>{title}</span>
    <span class="text-secondary text-sm">{date}</span>
  </div>
  <div class="text-secondary flex gap-2 text-xs">
    {
      tags.map((tag: string, index: number) => (
        <span class="flex items-center justify-center font-mono text-[11px] opacity-70">
          {tag}
          {index != tags.length - 1 && <span>,</span>}
        </span>
      ))
    }
  </div>
</a>
